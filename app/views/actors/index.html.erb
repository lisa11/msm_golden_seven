<h1>Actors</h1>

<a href="/actors/new_form">Add a New Actor</a>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  <% @list.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="70">
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td>
      <a href="/actors/<%= actor.id %>">Details</a>
      <a href="/actors/<%= actor.id %>/edit_form">Edit</a>
      <a href="/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
