<h1>Directos</h1>

<a href="#">Add a New Director</a>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Name</th>
    <th>Bio</th>
    <th>Date Of Birth</th>
    <th colspan="3">Actions</th>
  </tr>
  <%= @list.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <%= director.name %>
    </td>
    <td>
      <%= director.bio %>
    </td>
    <td>
      <%= director.dob %>
    </td>
    <td>
      <a href="#">Show</a>
    </td>
    <td>
      <a href="#">Edit</a>
    </td>
    <td>
      <a href="#">Delete</a>
    </td>
  </tr>

</table>
