<h1>Directors</h1>

<a href="/directors/new_form">Add a New Director</a>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  <% @list.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width="70">
    </td>
    <td>
      <%= director.name %>
    </td>
    <td>
      <a href="/directors/<%= director.id %>">Details</a>
      <a href="/directors/<%= director.id %>/edit_form">Edit</a>
      <a href="/delete_director/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
