<h1>Update Director Info</h1>

<form action="/update_director/<%= @id.id %>">
  <div>
    <label>Name:</label>
    <input type="text" name="director_name" value="<%= @id.name %>">
  </div>
  <div>
    <label>Date of Birth:</label>
    <input type="text" name="director_dob" value="<%= @id.dob %>">
  </div>
  <div>
    <label>Image URL:</label>
    <input type="text" name="director_imagea_url" value="<%= @id.image_url %>">
  </div>
  <div>
    <label>Bio:</label>
    <input type="text" name="director_bio" value="<%= @id.bio %>">
  </div>
  <div>
    <button>Update Info</button>
  </div>

</form>

<a href="/directors">Cancel</a>
